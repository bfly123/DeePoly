{
    "problem_type": "time_pde",
    "method": "hybrid",
    "eq": {
        "L1": [
            "-0.01*diff(u,x,2)"
        ],
        "L2": [
            "diff(u,x)"
        ],
        "F": [
            "u"
        ],
        "N": []
    },
    "vars_list": [
        "u"
    ],
    "spatial_vars": [
        "x"
    ],
    "Initial_conditions": [
        {
            "var": "u",
            "value": "-sin(pi*x)",
            "points": 500
        }
    ],
    "boundary_conditions": [
        {
            "type": "periodic",
            "region": "left",
            "pair_with": "right",
            "constraint": "dirichlet",
            "points": 1
        }
    ],
    "hidden_dims": [
        12,
        32,
        32,
        10
    ],
    "epochs_adam": 20000,
    "epochs_lbfgs": 0,
    "max_retries": 1,
    "DNNtol": 0.01,
    "note": "单步预测-校正格式：算子值预计算和时间步间复用，减少75%算子计算量",
    "learning_rate": 0.01,
    "n_segments": [
        6
    ],
    "points_domain": 500,
    "points_per_swap": 1,
    "points_domain_test": [
        100
    ],
    "poly_degree": [
        10
    ],
    "x_domain": [
        [
            -1,
            1
        ]
    ],
    "time_scheme": "onestep_predictor",
    "T": 0.5,
    "dt": 0.01,
    "spotter_skip": 1,
    "reference_solution": "reference_data/burgers.mat",
    "realtime_visualization": true,
    "animation_skip": 1,
    "device": "cuda",
    "linear_device": "cpu",
    "seed": 42,
    "auto_code": false
}